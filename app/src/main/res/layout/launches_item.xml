<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/launche_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="7dp"/>
    <TextView
        android:id="@+id/missiontxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mission"
        app:layout_constraintTop_toTopOf="@id/launche_img"
        app:layout_constraintStart_toEndOf="@id/launche_img"
        android:layout_marginStart="12dp"/>
    <TextView
        android:id="@+id/datetimetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/datetime"
        app:layout_constraintTop_toBottomOf="@id/missiontxt"
        app:layout_constraintStart_toStartOf="@id/missiontxt"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/rockettxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rocket"
        app:layout_constraintTop_toBottomOf="@id/datetimetxt"
        app:layout_constraintStart_toStartOf="@id/datetimetxt"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/timedifftxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timediff"
        app:layout_constraintTop_toBottomOf="@id/rockettxt"
        app:layout_constraintStart_toStartOf="@id/rockettxt"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/missionval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        app:layout_constraintTop_toTopOf="@id/missiontxt"
        app:layout_constraintStart_toEndOf="@id/missiontxt"
        android:layout_marginStart="56dp"/>
    <TextView
        android:id="@+id/datetimeval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        app:layout_constraintTop_toBottomOf="@id/missiontxt"
        app:layout_constraintStart_toStartOf="@id/missionval"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/rocketval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        app:layout_constraintTop_toBottomOf="@id/datetimetxt"
        app:layout_constraintStart_toStartOf="@id/missionval"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/timediffval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        app:layout_constraintTop_toBottomOf="@id/rockettxt"
        app:layout_constraintStart_toStartOf="@id/missionval"
        android:layout_marginTop="12dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>